extends base.pug

block content
    h4 Update Video
    form(method="POST")
        input(placeholder="Video Title", value=video.title,required,name="title")
        input(name="description",value=video.description,placeholder="Description",required,type="text",minlength=20)
        input(name="hashtags",value=video.hashtags.join(),placeholder="Hashtags, separated by comma.",required,type="text")
        input(value="Save", type="submit")
