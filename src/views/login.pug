extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Username" name="username", type='text',requried)
        input(placeholder="Password" name="password", type='password',requried)
        input(type='submit',value='Login')
        include partials/social-login
    div.auth-switch
        span Don't have an account? 
        a(href="/join") Create one now &rarr;