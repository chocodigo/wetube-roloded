extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Username" name="username", type='text',requried)
        input(placeholder="Password" name="password", type='password',requried)
        input(type='submit',value='Login')
        br
        a(href="https://github.com/login/oauth/authorize?client_id=d0cc777200ed3f63b479&allow_signup=false") Continue with Github &rarr;
    hr
    div 
        span Don't have an account? 
        a(href="/join") Create one now &rarr;