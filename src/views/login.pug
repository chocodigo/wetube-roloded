extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Username" name="name", type='text',requried)
        input(placeholder="Password" name="password", type='password',requried)
        input(type='submit',value='Login')
    hr
    div 
        span Don't have an account? 
        a(href="/join") Create one now &rarr;